    </UserControl.Resources>
    <Border Style="{StaticResource DeviceBorder}" VerticalAlignment="Top">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Style="{StaticResource DeviceButtonSimple}" Command="{Binding ButtonPressedCommand}" VerticalAlignment="Center">
                <Button.Content>
                    <Grid>
                        <Border Height="60" Width="60" CornerRadius="10" BorderThickness="0" BorderBrush="{Binding IconForegroundColor}" Background="{Binding IconForegroundColor}" Visibility="{Binding IconVisibility}" VerticalAlignment="Center">
                            <Image x:Name="IconImage" Height="50" Width="50" Source="{Binding IconURI}" />
                        </Border>
                        <BitmapIcon x:Name="IconBitmap" Height="50" Width="50" UriSource="{Binding IconURI}" Foreground="{Binding IconForegroundColor}" Visibility="{Binding BitmapIconVisibility}"/>
                        <Viewbox x:Name="Icon" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Height="50" Width="50" Stretch="Uniform" Visibility="{Binding VectorIconVisibility}">
                            <ContentPresenter x:Name="IconCP" CacheMode="BitmapCache" Foreground="{Binding IconForegroundColor}" Content="{x:Null}" ContentTemplate="{Binding IconDataTemplate}"/>
                        </Viewbox>
                    </Grid>
                </Button.Content>
            </Button>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Uid="Header" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Style="{ThemeResource BaseTextBlockStyle}"  Margin="0,0,0,0" Text="{Binding Name}" TextWrapping="NoWrap"/>
