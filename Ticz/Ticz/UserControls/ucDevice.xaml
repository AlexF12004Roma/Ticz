                                        </Canvas>
                                    </DataTemplate>
                                </ContentPresenter.ContentTemplate>
                            </ContentPresenter>
                        </Viewbox>
                        <TextBlock Grid.Column="1" Text="{Binding BatteryLevelString}" Style="{ThemeResource BodyTextBlockStyle}" FontSize="12" Foreground="#FF808080" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Row="2"  Grid.Column="1" Grid.ColumnSpan="2" Visibility="{Binding OnOffButtonVisibility}" HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="ButtonOn" Margin="10,0,10,0" Grid.Column="0" Style="{StaticResource DeviceButton}" Content="On" HorizontalAlignment="Stretch" Command="{Binding GroupSwitchOn}"/>
                        <Button x:Name="ButtonOff" Margin="10,0,10,0" Grid.Column="1" Style="{StaticResource DeviceButton}" Content="Off" HorizontalAlignment="Stretch" Command="{Binding GroupSwitchOff}"/>
                    </Grid>
                    <ProgressBar Grid.Row="3" Grid.Column="0" Background="Transparent" IsIndeterminate="{Binding needsInitializing}"/>
                </Grid>
            </Button.Content>
            <Interactivity:Interaction.Behaviors>
                <Core:EventTriggerBehavior EventName="RightTapped" SourceObject="{Binding ElementName=DeviceButton}">
                    <Core:InvokeCommandAction Command="{Binding ButtonRightTappedCommand}"/>
                </Core:EventTriggerBehavior>
                <Core:EventTriggerBehavior EventName="Tapped" SourceObject="{Binding ElementName=DeviceButton}">
                    <Core:InvokeCommandAction Command="{Binding ButtonPressedCommand}"/>
                </Core:EventTriggerBehavior>
            </Interactivity:Interaction.Behaviors>
        </Button>
        <Button x:Name="ProtectedButton" Grid.Row="1" Visibility="Collapsed" HorizontalAlignment="Stretch"  Style="{StaticResource DeviceButton}" HorizontalContentAlignment="Stretch">
            <Button.Content>
                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Grid.Column="0" Text="Password"  Style="{ThemeResource BodyTextBlockStyle}"/>
                    <TextBox VerticalAlignment="Center" Grid.Column="1" Margin="20,0,0,0" Text="{Binding PassCode, Mode=TwoWay}"/>
                </Grid>
            </Button.Content>
            <Interactivity:Interaction.Behaviors>
                <Core:DataTriggerBehavior Binding="{Binding ShowPassCodeInput}" Value="True">
                    <Core:ChangePropertyAction PropertyName="Visibility" TargetObject="{Binding ElementName=ProtectedButton}" Value="Visible"/>
                </Core:DataTriggerBehavior>
                <Core:DataTriggerBehavior Binding="{Binding ShowPassCodeInput}" Value="False">
                    <Core:ChangePropertyAction PropertyName="Visibility" TargetObject="{Binding ElementName=ProtectedButton}" Value="Collapsed"/>
                </Core:DataTriggerBehavior>
            </Interactivity:Interaction.Behaviors>
        </Button>
