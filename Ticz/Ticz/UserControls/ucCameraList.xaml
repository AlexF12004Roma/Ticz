<UserControl
    x:Class="Ticz.ucCameraList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ticz"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="500"
    d:DesignWidth="300">

    <Grid>
        <ListView Grid.Row="1" ItemsSource="{x:Bind Cameras, Mode=OneWay}" SelectionMode="None" Margin="0" Padding="0">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="2" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:CameraViewModel">
                    <Grid Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
                          Margin="0" 
                          Padding="5" 
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch" 
                          BorderBrush="{ThemeResource SystemControlBackgroundBaseMediumLowBrush}"
                          BorderThickness="1" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <!-- THIS IS THE HEADER FOR THE DEVICE, CONTAINING THE NAME-->
                        <Border Grid.Row="0" 
                                Grid.Column="0" 
                                Grid.ColumnSpan="2" 
                                Margin="0,0,0,5">
                            <TextBlock x:Name="Header"
                                       Margin="0,0,0,0" Text="{x:Bind name}" 
                                       FontSize="20"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       TextWrapping="NoWrap"/>
                        </Border>
                        <Image Grid.Row="1"
                               Grid.Column="0" 
                               Grid.ColumnSpan="2"
                               Stretch="Uniform" 
                               Canvas.ZIndex="99" 
                               MaxHeight="300" 
                               Source="{x:Bind frame1, TargetNullValue='/Images/TiczLogo.png', FallbackValue='/Images/TiczLogo.png', Mode=OneWay}"/>
                        <ToggleSwitch Grid.Row="2" 
                                      Grid.Column="0"
                                      Grid.ColumnSpan="2" 
                                      Margin="10,0,0,0" 
                                      OffContent="Auto refresh disabled" 
                                      OnContent="Auto refresh enabled" 
                                      IsOn="{x:Bind AutoRefreshEnabled, Mode=TwoWay}"/>
                        <Slider Grid.Row="3" 
                                Margin="10,0,0,0" 
                                Grid.Column="0" 
                                Minimum="100" 
                                Maximum="2000" 
                                Value="{x:Bind RefreshDelay, Mode=TwoWay}"/>
                        <Border Grid.Row="3" 
                                Grid.Column="1"
                                Margin="10,0,10,0" 
                                VerticalAlignment="Stretch">
                            <TextBlock Text="{x:Bind RefreshDelayText, Mode=OneWay}" 
                                       VerticalAlignment="Center" 
                                       Style="{ThemeResource SettingsExplanationStyle}"/>
                        </Border>

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
    </Grid>
</UserControl>
