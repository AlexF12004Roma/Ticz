        <Interactivity:Interaction.Behaviors>
            <Core:DataTriggerBehavior Binding="{Binding isOn, Mode=TwoWay}" Value="True">
                <Core:ChangePropertyAction PropertyName="Foreground" TargetObject="{Binding ElementName=IconCP}" Value="{ThemeResource SystemControlBackgroundAccentBrush}"/>
            </Core:DataTriggerBehavior>
            <Core:DataTriggerBehavior Binding="{Binding isOn, Mode=TwoWay}" Value="False">
                <Core:ChangePropertyAction PropertyName="Foreground" TargetObject="{Binding ElementName=IconCP}" Value="#FF808880"/>
