<!-- THESE ARE THE GRAPH TEMPLATES USED FOR DIFFERENT TYPE OF DEVICES -->
    <DataTemplate x:Key="NoGraphAvailable">
        <Grid>
            <Border Grid.Row="0"  HorizontalAlignment="Stretch">
                <TextBlock Text="Graphs for this device aren't supported (yet?)" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </Border>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="FastGraph">
        <SyncFusion:SfChart HorizontalAlignment="Stretch" Header="{Binding GraphTitle}" FontSize="20"  Height="300">
            <SyncFusion:SfChart.PrimaryAxis>
                <SyncFusion:DateTimeAxis LabelFormat="MMM dd" FontSize="12"/>
            </SyncFusion:SfChart.PrimaryAxis>
            <SyncFusion:SfChart.SecondaryAxis>
                <SyncFusion:NumericalAxis Header="Value" FontSize="12" Minimum="0" Maximum="100" />
            </SyncFusion:SfChart.SecondaryAxis>
            <SyncFusion:StepLineSeries Label="Level" ItemsSource="{Binding result}"  XBindingPath="Date" YBindingPath="Level"/>
        </SyncFusion:SfChart>
    </DataTemplate>

    <DataTemplate x:Key="FastGraphUsageElectricDay">
        <Grid>
            <SyncFusion:SfChart HorizontalAlignment="Stretch" Header="{Binding GraphTitle}" FontSize="20"  Height="300">
                <SyncFusion:SfChart.PrimaryAxis>
                    <SyncFusion:DateTimeAxis LabelFormat="HH:mm" IntervalType="Hours" Interval="1" FontSize="12"/>
                </SyncFusion:SfChart.PrimaryAxis>
                <SyncFusion:SfChart.SecondaryAxis>
                    <SyncFusion:NumericalAxis Header="Usage in Watt" LabelFormat="0 W"  FontSize="12" />
                </SyncFusion:SfChart.SecondaryAxis>
                <SyncFusion:FastLineSeries Label="Usage_1" ItemsSource="{Binding result}" XBindingPath="d" YBindingPath="u"/>
            </SyncFusion:SfChart>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="FastGraphUsageElectricMonth">
