                <SyncFusion:SfChart.SecondaryAxis>
                    <SyncFusion:NumericalAxis Header="Usage in Watt"  Minimum="0" LabelFormat="0 W"  FontSize="12" />
                </SyncFusion:SfChart.SecondaryAxis>
                <SyncFusion:SplineSeries Label="Usage_1"  ItemsSource="{Binding result}" XBindingPath="d" YBindingPath="u_min"/>
                <SyncFusion:SplineSeries Label="Usage_2"  ItemsSource="{Binding result}" XBindingPath="d" YBindingPath="u_max"/>
            </SyncFusion:SfChart>
        </Grid>
    </DataTemplate>
