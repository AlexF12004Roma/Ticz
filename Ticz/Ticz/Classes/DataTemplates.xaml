    <!-- ICON DATATEMPLATES, ONE OF THE 2 IS USED AS ICON AND SWITCH FOR EACH DEVICE. 
    USING X:BIND ON THESE FOR SOME REASON DON'T WORK. ALTHOUGH COMPILATION OCCURS AND APP RUNS, NO ICONS ARE VISIBLE --> 

    <DataTemplate x:Key="TiczIconDataTemplate">
        <Grid VerticalAlignment="Top">
            <Viewbox x:Name="Icon" CacheMode="BitmapCache" Height="{Binding ButtonSize}" Width="{Binding ButtonSize}" VerticalAlignment="Top" Stretch="Uniform">
                <Path Fill="{Binding IconForegroundColor, Mode=OneWay}" Stretch="Uniform"  Data="{Binding IconPathGeometry}"/>
            </Viewbox>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="DomoIconDataTemplate">
        <Grid VerticalAlignment="Top">
            <Image Source="{Binding BitmapIconURI, Mode=OneWay}" Width="{Binding ButtonSize}" VerticalAlignment="Top" Stretch="Uniform"/>
        </Grid>
    </DataTemplate>

    <!-- THESE ARE THE GRAPH TEMPLATES USED FOR DIFFERENT TYPE OF DEVICES -->
    <DataTemplate x:Key="NoGraphAvailable">
        <Grid>
            <Border Grid.Row="0"  HorizontalAlignment="Stretch">
                <TextBlock TextWrapping="WrapWholeWords" Text="Graphs for this device aren't supported yet. Please contact me so I can add it ! ( need sample data for the graph :)" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </Border>
        </Grid>
