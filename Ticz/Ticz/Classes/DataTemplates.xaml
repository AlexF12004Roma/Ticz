    <!-- Variable ViewModel DataTemplates -->
    <DataTemplate x:Key="VariableIntegerTemplate" x:DataType="local:VariableViewModel">
        <Grid x:Name="rootGrid" Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"  Margin="0" Padding="5" HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch" BorderBrush="{ThemeResource SystemControlBackgroundBaseMediumLowBrush}" BorderThickness="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="0" 
                       Grid.ColumnSpan="3"
                       Grid.Row="0"
                       Margin="0,0,0,4"
                       HorizontalAlignment="Left" 
                       Text="{Binding Name, Mode=OneWay}" 
                       Style="{ThemeResource BaseTextBlockStyle}" 
                       FontSize="12" 
                       TextWrapping="NoWrap"/>
            <TextBlock Grid.Column="0" 
                       Grid.Row="1"
                       HorizontalAlignment="Left" 
                       Text="{Binding LastUpdate, Mode=OneWay}" 
                       Style="{ThemeResource BaseTextBlockStyle}" 
                       FontSize="10" 
                       Foreground="#FF808080"/>
            <TextBox Grid.Column="1" 
                     Grid.Row="1" 
                     Grid.RowSpan="2" 
                     HorizontalAlignment="Stretch"
                     Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     InputScope="Number"/>
            <Button Grid.Column="2" 
                    Grid.Row="1" 
                    Grid.RowSpan="2" 
                    Padding="5,0,5,0" 
                    VerticalAlignment="Stretch" 
                    Margin="4,0,0,0" 
                    HorizontalAlignment="Stretch"
                    Content="Update" 
                    Command="{Binding UpdateValue}"/>
        </Grid>
    </DataTemplate>

