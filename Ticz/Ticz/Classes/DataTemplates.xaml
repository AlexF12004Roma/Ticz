    <!-- RoomView Data Templates-->
    <DataTemplate x:Key="IconViewDataTemplate" x:DataType="local:RoomViewModel">
        <Grid x:Name="gridRoomIconView" Margin="0" Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}">
            <Grid.Resources>
                <CollectionViewSource x:Key="cvsGroupedDevices" Source="{Binding currentRoom.GroupedDevices, Mode=OneWay}"
                                  IsSourceGrouped="True" />
            </Grid.Resources>
            <GridView ItemsSource="{Binding Source={StaticResource cvsGroupedDevices}}" Background="Transparent" ScrollViewer.VerticalScrollBarVisibility="Hidden"
                   SelectionMode="None">
                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Top"/>
                        <Setter Property="Margin" Value="2"/>
                    </Style>
                </GridView.ItemContainerStyle>
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <!--<Rectangle Fill="DarkOrange" DataContext="{Binding}" MinHeight="120" MinWidth="120" Height="{Binding ElementName=gridRoomIconView, Path=DataContext.currentRoom.ItemHeight}" Width="{Binding ElementName=gridRoomIconView, Path=DataContext.currentRoom.ItemWidth}"/>-->
                        <local:ucDevice_Dynamic 
                            Height="{Binding ElementName=gridRoomIconView, Path=DataContext.currentRoom.ItemHeight}" 
                            Width="{Binding ElementName=gridRoomIconView, Path=DataContext.currentRoom.ItemWidth}"/>
                    </DataTemplate>

                </GridView.ItemTemplate>
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal"/>
                        <!--<StackPanel Orientation="Vertical"/>-->
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
                <GridView.GroupStyle >
                    <GroupStyle HidesIfEmpty="True">
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <Border HorizontalAlignment="Stretch" VerticalAlignment="Center" Padding="4">
                                    <TextBlock Text="{Binding Key}" FontSize="16"/>
                                </Border>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </GridView.GroupStyle>
            </GridView>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="ListViewDataTemplate" x:DataType="local:RoomViewModel">
        <Grid Margin="0" Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}">
            <Grid.Resources>
                <CollectionViewSource x:Key="cvsGroupedDevices" Source="{Binding currentRoom.GroupedDevices}" IsSourceGrouped="True" />
            </Grid.Resources>
            <ListView ItemsSource="{Binding Source={StaticResource cvsGroupedDevices}}" Background="Transparent" ScrollViewer.VerticalScrollBarVisibility="Hidden"
                          SelectionMode="None">
                <ListView.GroupStyle>
                    <GroupStyle HidesIfEmpty="True">
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <Border HorizontalAlignment="Stretch" Background="Transparent" Padding="4">
                                    <TextBlock Text="{Binding Key}" FontSize="16" HorizontalAlignment="Stretch"/>
                                </Border>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ListView.GroupStyle>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="2" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <local:ucDevice_Dynamic/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="GridViewDataTemplate" x:DataType="local:RoomViewModel">
        <Grid Margin="0" Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}">
            <Grid.Resources>
                <CollectionViewSource x:Key="cvsGroupedDevices" Source="{Binding currentRoom.GroupedDevices}" IsSourceGrouped="True" />
            </Grid.Resources>
            <GridView x:Name="griddie" ItemsSource="{Binding Source={StaticResource cvsGroupedDevices}}" Background="Transparent" 
                  ContinuumNavigationTransitionInfo.ExitElementContainer="True" SelectionMode="None" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                <GridView.GroupStyle>
                    <GroupStyle HidesIfEmpty="True">
                        <GroupStyle.Panel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                                <!--<ItemsWrapGrid Orientation="Horizontal" Margin="0,0,0,20" ItemHeight="{Binding currentRoom.ItemHeight}" ItemWidth="{Binding currentRoom.ItemWidth}"/>-->
                            </ItemsPanelTemplate>
                        </GroupStyle.Panel>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <Border HorizontalAlignment="Stretch">
                                    <TextBlock Text="{Binding Key}" FontSize="16" HorizontalAlignment="Stretch"/>
                                </Border>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </GridView.GroupStyle>
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!--<StackPanel Orientation="Horizontal"/>-->
                        <ItemsWrapGrid Margin="0" Orientation="Horizontal" ItemWidth="{Binding ElementName=griddie, Path=DataContext.currentRoom.ItemWidth}"
                                       ItemHeight="{Binding ElementName=griddie, Path=DataContext.currentRoom.ItemHeight}"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="VerticalAlignment" Value="Top"/>
                        <Setter Property="Margin" Value="2"/>
                    </Style>
                </GridView.ItemContainerStyle>
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <local:ucDevice_Dynamic Margin="0" />
                    </DataTemplate>
                </GridView.ItemTemplate>
                <Interactivity:Interaction.Behaviors>
                    <Core:EventTriggerBehavior EventName="SizeChanged">
                        <Core:InvokeCommandAction Command="{Binding currentRoom.GridViewSizeChangedCommand}" CommandParameter="{Binding ElementName=griddie}"/>
                    </Core:EventTriggerBehavior>
                </Interactivity:Interaction.Behaviors>
            </GridView>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="ResizeViewDataTemplate" x:DataType="local:RoomViewModel">
        <Grid x:Name="Griddie" Margin="0" Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}">
            <Grid.Resources>
                <CollectionViewSource x:Key="cvsGroupedDevices" Source="{Binding currentRoom.GroupedDevices}" IsSourceGrouped="True" />
            </Grid.Resources>
            <local:VariableGrid x:Name="vGrid"  ItemsSource="{Binding Source={StaticResource cvsGroupedDevices}}"
                            Background="Transparent" ScrollViewer.VerticalScrollBarVisibility="Hidden" 
                            SelectionMode="None" CanReorderItems="True" CanDragItems="True" AllowDrop="True">
                <local:VariableGrid.GroupStyle>
                    <GroupStyle HidesIfEmpty="True">
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <Border HorizontalAlignment="Stretch" Padding="4">
                                    <TextBlock Text="{Binding Key}" FontSize="16" HorizontalAlignment="Stretch"/>
                                </Border>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                        <GroupStyle.Panel>
                            <ItemsPanelTemplate>
                                <VariableSizedWrapGrid Orientation="Horizontal" 
                                                       HorizontalAlignment="Stretch"  
                                                       HorizontalChildrenAlignment="Left" 
                                                       ItemHeight="{Binding ElementName=Griddie, Path=DataContext.currentRoom.ItemHeight}" 
                                                       ItemWidth="{Binding ElementName=Griddie, Path=DataContext.currentRoom.ItemWidth}"/>
                            </ItemsPanelTemplate>
                        </GroupStyle.Panel>
                    </GroupStyle>
                </local:VariableGrid.GroupStyle>
                <local:VariableGrid.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="VerticalAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                        <Setter Property="Margin" Value="2"/>
                    </Style>
                </local:VariableGrid.ItemContainerStyle>
                <local:VariableGrid.ItemTemplate>
                    <DataTemplate>
                        <local:ucDevice_Dynamic Margin="0" />
                    </DataTemplate>
                </local:VariableGrid.ItemTemplate>
                <local:VariableGrid.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </local:VariableGrid.ItemsPanel>
            </local:VariableGrid>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="DashboardViewDataTemplate" x:DataType="local:RoomViewModel">
        <Grid x:Name="griddieDashBoard" Margin="0" Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}">
            <Grid.Resources>
                <CollectionViewSource x:Key="cvsDevices" Source="{Binding currentRoom.Devices}" IsSourceGrouped="False"/>
            </Grid.Resources>
            <local:VariableGrid x:Name="vGrid"   ItemsSource="{Binding Source={StaticResource cvsDevices}}" ScrollViewer.VerticalScrollBarVisibility="Hidden" SelectionMode="None" Background="Transparent">
                <local:VariableGrid.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="VerticalAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                        <Setter Property="Margin" Value="2"/>
                        <Setter Property="Padding" Value="0"/>
                    </Style>
                </local:VariableGrid.ItemContainerStyle>
                <local:VariableGrid.ItemTemplate>
                    <DataTemplate>
                        <local:ucDevice_Dynamic Margin="0" />
                    </DataTemplate>
                </local:VariableGrid.ItemTemplate>
                <local:VariableGrid.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VariableSizedWrapGrid Margin="0" Orientation="Horizontal" 
                                               HorizontalAlignment="Stretch"  
                                               HorizontalChildrenAlignment="Left" ItemHeight="{Binding ElementName=griddieDashBoard, Path=DataContext.currentRoom.ItemHeight}"
                                               ItemWidth="{Binding ElementName=griddieDashBoard, Path=DataContext.currentRoom.ItemWidth}"/>
                    </ItemsPanelTemplate>
                </local:VariableGrid.ItemsPanel>
            </local:VariableGrid>
        </Grid>
    </DataTemplate>






    <!-- ICON DATATEMPLATES, ONE OF THE 2 IS USED AS ICON AND SWITCH FOR EACH DEVICE. 
    USING X:BIND ON THESE FOR SOME REASON DON'T WORK. ALTHOUGH COMPILATION OCCURS AND APP RUNS, NO ICONS ARE VISIBLE --> 

    <DataTemplate x:Key="TiczIconDataTemplate">
        <Grid>
            <Viewbox x:Name="Icon" CacheMode="BitmapCache" Height="{Binding ButtonSize}" Width="{Binding ButtonSize}" Stretch="Uniform">
                <Path Fill="{Binding IconForegroundColor, Mode=OneWay}" Stretch="Uniform"  Data="{Binding IconPathGeometry}"/>
            </Viewbox>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="DomoIconDataTemplate">
        <Grid>
            <Image Source="{Binding BitmapIconURI, Mode=OneWay}" Width="{Binding ButtonSize}" Stretch="Uniform"/>
        </Grid>
    </DataTemplate>

    <!-- THESE ARE THE GRAPH TEMPLATES USED FOR DIFFERENT TYPE OF DEVICES -->
    <DataTemplate x:Key="NoGraphAvailable">
        <Grid>
            <Border Grid.Row="0"  HorizontalAlignment="Stretch">
                <TextBlock TextWrapping="WrapWholeWords" Text="Graphs for this device aren't supported yet. Please contact me so I can add it ! ( need sample data for the graph :)" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </Border>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="FastGraph">
        <SyncFusion:SfChart HorizontalAlignment="Stretch" Header="{Binding GraphTitle}" FontSize="20"  Height="300">
            <SyncFusion:SfChart.PrimaryAxis>
                <SyncFusion:DateTimeAxis LabelFormat="MMM dd" FontSize="12"/>
            </SyncFusion:SfChart.PrimaryAxis>
            <SyncFusion:SfChart.SecondaryAxis>
                <SyncFusion:NumericalAxis Header="Value" FontSize="12" Minimum="0" Maximum="100" />
            </SyncFusion:SfChart.SecondaryAxis>
            <SyncFusion:StepLineSeries Label="Level" ItemsSource="{Binding result}"  XBindingPath="Date" YBindingPath="Level"/>
        </SyncFusion:SfChart>
    </DataTemplate>

    <DataTemplate x:Key="FastGraphUsageElectricDay">
        <Grid>
            <SyncFusion:SfChart HorizontalAlignment="Stretch" Header="{Binding GraphTitle}" FontSize="20"  Height="300">
                <SyncFusion:SfChart.PrimaryAxis>
                    <SyncFusion:DateTimeAxis LabelFormat="HH:mm" IntervalType="Hours" Interval="1" FontSize="12"/>
                </SyncFusion:SfChart.PrimaryAxis>
                <SyncFusion:SfChart.SecondaryAxis>
                    <SyncFusion:NumericalAxis Header="Usage in Watt" Minimum="0" LabelFormat="0 W"  FontSize="12" />
                </SyncFusion:SfChart.SecondaryAxis>
                <SyncFusion:FastLineSeries Label="Usage_1" ItemsSource="{Binding result}" XBindingPath="d" YBindingPath="u"/>
            </SyncFusion:SfChart>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="FastGraphUsageElectricMonth">
        <Grid>
            <SyncFusion:SfChart HorizontalAlignment="Stretch" Header="{Binding GraphTitle}" FontSize="20"  Height="300">
                <SyncFusion:SfChart.PrimaryAxis>
                    <SyncFusion:DateTimeAxis LabelFormat="MMM dd" FontSize="12" IntervalType="Days" Interval="2"/>
                </SyncFusion:SfChart.PrimaryAxis>
                <SyncFusion:SfChart.SecondaryAxis>
                    <SyncFusion:NumericalAxis Header="Usage in Watt"  Minimum="0" LabelFormat="0 W"  FontSize="12" />
                </SyncFusion:SfChart.SecondaryAxis>
                <SyncFusion:SplineSeries Label="Usage_1"  ItemsSource="{Binding result}" XBindingPath="d" YBindingPath="u_min"/>
                <SyncFusion:SplineSeries Label="Usage_2"  ItemsSource="{Binding result}" XBindingPath="d" YBindingPath="u_max"/>
            </SyncFusion:SfChart>
        </Grid>
    </DataTemplate>
    <DataTemplate x:Key="FastGraphUsageElectricYear">
        <Grid>
            <SyncFusion:SfChart HorizontalAlignment="Stretch" Header="{Binding GraphTitle}" FontSize="20"  Height="300">
                <SyncFusion:SfChart.PrimaryAxis>
                    <SyncFusion:DateTimeAxis  LabelFormat="MMM" IntervalType="Months" Interval="1" FontSize="12"/>
                </SyncFusion:SfChart.PrimaryAxis>
                <SyncFusion:SfChart.SecondaryAxis>
                    <SyncFusion:NumericalAxis Header="Usage in Watt"  Minimum="0" LabelFormat="0 W" FontSize="12" />
                </SyncFusion:SfChart.SecondaryAxis>
                <SyncFusion:SplineSeries Label="Usage_1"  ItemsSource="{Binding result}" XBindingPath="d" YBindingPath="u_min" />
                <SyncFusion:SplineSeries Label="Usage_2" ItemsSource="{Binding result}" XBindingPath="d" YBindingPath="u_max"/>
            </SyncFusion:SfChart>
        </Grid>
    </DataTemplate>

